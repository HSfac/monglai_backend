# ==================== 서버 설정 ====================
PORT=3000
NODE_ENV=development

# ==================== 데이터베이스 ====================
MONGODB_URI=mongodb://localhost:27017/monglai
# 또는 MongoDB Atlas:
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/monglai?retryWrites=true&w=majority

# ==================== JWT 인증 ====================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# ==================== AI API 키 ====================
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
CLAUDE_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
XAI_API_KEY=xai-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ==================== Toss Payments ====================
TOSS_PAYMENTS_SECRET_KEY=test_sk_xxxxxxxxxxxxxxxxxxxxxxxxxx
TOSS_PAYMENTS_CLIENT_KEY=test_ck_xxxxxxxxxxxxxxxxxxxxxxxxxx

# ==================== AWS S3 (이미지 업로드) ====================
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET=monglai-uploads

# ==================== NICE 본인인증 (성인 인증) ====================
# NICE 평가정보에서 발급받은 사이트 코드 및 비밀번호
NICE_SITE_CODE=your_site_code
NICE_SITE_PASSWORD=your_site_password
# 인증 완료 후 리디렉션될 URL (백엔드 콜백 URL)
NICE_RETURN_URL=http://localhost:3000/verification/callback

# ==================== 관리자 인증 ====================
# 관리자 대시보드 접근 시 사용하는 토큰 (보안 강화를 위해 복잡하게 설정)
ADMIN_TOKEN=monglai-admin-super-secret-token-2025

# ==================== 프론트엔드 URL ====================
FRONTEND_URL=http://localhost:3001

# ==================== 기타 설정 ====================
# 신규 가입 시 제공할 무료 토큰 개수
FREE_TOKENS_ON_SIGNUP=50
